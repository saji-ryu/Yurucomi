{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "jsx": "react",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "*": ["./node_modules/@types/*", "../../typings"]
    },
    "typeRoots": ["./node_modules/@types", "../../typings"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "./src/pages/*"]
}
